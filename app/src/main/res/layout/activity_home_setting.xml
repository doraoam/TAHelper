<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="manypocket.tahelper.MainActivity"
    android:weightSum="1">

    <Space
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="227dp"
        android:layout_height="135dp"
        android:text="Edit room"
        android:id="@+id/button_edit_room"
        android:onClick="gotoEditRoom"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="227dp"
        android:layout_height="135dp"
        android:text="Edit Student"
        android:id="@+id/button_edit_student"
        android:onClick="gotoEditStudent"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="227dp"
        android:layout_height="135dp"
        android:text="Edit Subject"
        android:id="@+id/button_edit_subject"
        android:onClick="gotoEditSubject"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
